# ============================================================================
# LibSVM CMake Configuration File
# ============================================================================
#
# This file is used by find_package(LibSVM) to locate the installed library.
#
# Usage in your project:
#   find_package(LibSVM REQUIRED)
#   target_link_libraries(your_target LibSVM::svm)
#
# Variables defined:
#   LibSVM_FOUND        - True if LibSVM was found
#   LibSVM_VERSION      - Version string
#   LibSVM_INCLUDE_DIRS - Include directories
#   LibSVM_LIBRARIES    - Library to link
#
# Imported targets:
#   LibSVM::svm         - The LibSVM library target
#
# ============================================================================

@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Include the exported targets
include("${CMAKE_CURRENT_LIST_DIR}/LibSVMTargets.cmake")

# Set variables for backward compatibility
# Note: When using target_link_libraries(target LibSVM::svm), 
# include directories are automatically propagated.
# These variables are provided for projects that don't use imported targets.
set(LibSVM_INCLUDE_DIRS "${PACKAGE_PREFIX_DIR}/@CMAKE_INSTALL_INCLUDEDIR@")
set(LibSVM_LIBRARIES LibSVM::svm)
set(LibSVM_VERSION "@PROJECT_VERSION@")

check_required_components(LibSVM)

message(STATUS "Found LibSVM ${LibSVM_VERSION}")
